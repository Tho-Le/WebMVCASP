@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "EditUserInRole";
    var roleId = ViewBag.roldId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from the given role</h2>
        </div>
        <div class="card-body">
            @foreach (var user in Model)
            {
                @if (user.IsSelected)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" checked/>
                    </div>
                }
                else
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @user.UserName />
                        <h2>@user.UserName</h2>
                    </div>
                }
            }
        </div>
        <div class="card-footer">
            <input type="submit" value ="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="ListRoles" asp-controller="Admin" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>

