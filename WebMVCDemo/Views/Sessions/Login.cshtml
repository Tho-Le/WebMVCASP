
@{
    ViewData["Title"] = "Login";
}

<h1>Login Page</h1>

<div class="card">
    <img class="card-img-top" style="width: 18rem;" src="~/images/login_image.jpg" />
</div>
<form action="@Url.Action("Login", "Sessions")" method="post">
    <div class="form-group">
        @* The for attribute bounds the label to the first id that matches it *@
        <label for="username">Username</label>
        @* The name attribute allows use to assess the input data when the user submits it *@
        <input class="form-control" id="username" type="text" placeholder="Enter username" name="username" />
        <small id="usernameHelp" class="form-text text-muted">Don't share your username with anyone</small>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" required id="password" placeholder="Password" name="password" />
        <small id="passwordHelp" class="form-text text-muted">
            Make sure your password is 8 characters long and has 1 number and 1 upper case letter.
        </small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

